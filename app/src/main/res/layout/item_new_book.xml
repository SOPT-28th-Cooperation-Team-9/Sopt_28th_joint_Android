<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="95dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#121212"
    android:layout_marginHorizontal="7.5dp">

    <FrameLayout
        android:id="@+id/fl_audio_book_new"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_audio_book_new_book_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rectangle_1071"
            />

        <TextView
            android:id="@+id/tv_audio_book_new_book_duration"
            android:layout_width="52dp"
            android:layout_height="16dp"
            android:text="6시간 59분"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:gravity="center"
            android:background="@drawable/duration_box"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_audio_book_new_book_title"
        android:layout_width="78dp"
        android:layout_height="38dp"
        android:text="내 아이를 위한 목소리 태교"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/fl_audio_book_new"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_audio_book_new_book_people"
        android:layout_width="54dp"
        android:layout_height="32dp"
        android:text="박용범 저\n김나연 낭독"
        android:textColor="#7f7e83"
        android:textSize="11sp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_audio_book_new_book_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_audio_book_new_book_price"
        android:layout_width="69dp"
        android:layout_height="19dp"
        android:text="대여 5,000원"
        android:textColor="#ffffff"
        android:textSize="11sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_audio_book_new_book_people"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>