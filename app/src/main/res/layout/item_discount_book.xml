<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="104dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#121212"
    android:layout_marginHorizontal="6dp">

    <FrameLayout
        android:id="@+id/fl_audio_book"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_audio_book_book_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rectangle_1070"
            />

        <TextView
            android:id="@+id/tv_audio_book_duration"
            android:layout_width="52dp"
            android:layout_height="16dp"
            android:text="6시간 59분"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:gravity="center"
            android:background="@drawable/duration_box"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            />

</FrameLayout>

<TextView
    android:id="@+id/tv_audio_book_book_title"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text="데미안 (민음사\n세계문학, 완독본)"
    android:textColor="#ffffff"
    android:textSize="15sp"
    android:letterSpacing="-0.075"
    android:layout_marginTop="6dp"
    app:layout_constraintTop_toBottomOf="@id/fl_audio_book"
    app:layout_constraintStart_toStartOf="parent"/>

<TextView
    android:id="@+id/tv_audio_book_book_people"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text="헤르만헤세 저\n최승훈 외 1인 낭독"
    android:textColor="#7f7e83"
    android:textSize="12sp"
    android:letterSpacing="-0.048"
    android:layout_marginTop="5dp"
    app:layout_constraintTop_toBottomOf="@id/tv_audio_book_book_title"
    app:layout_constraintStart_toStartOf="parent"/>

<TextView
    android:id="@+id/tv_audio_book_book_price"
    android:layout_width="69dp"
    android:layout_height="19dp"
    android:text="대여 2,700원"
    android:textColor="#ffffff"
    android:textSize="12sp"
    android:letterSpacing="-0.048"
    android:layout_marginTop="5dp"
    app:layout_constraintTop_toBottomOf="@id/tv_audio_book_book_people"
    app:layout_constraintStart_toStartOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>